{
  "permissions": {
    "allow": [
      "Read(*)",
      "Glob(*)",
      "Grep(*)",
      "Edit(src/**)",
      "Edit(.claude/**)",
      "Edit(config/**)",
      "Edit(tests/**)",
      "Write(data/**)",
      "Write(src/**)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(pip:*)",
      "mcp__google-sheets__*"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(sudo:*)",
      "Edit(.env*)"
    ]
  },
  "hooks": {
    "SessionStart": [{
      "matcher": "",
      "hooks": [{
        "type": "command",
        "command": "python src/hooks/session_init.py",
        "timeout": 30
      }]
    }],
    "SessionEnd": [{
      "matcher": "",
      "hooks": [{
        "type": "command",
        "command": "python src/hooks/session_archive.py",
        "timeout": 30
      }]
    }],
    "PostToolUse": [{
      "matcher": "Write",
      "hooks": [{
        "type": "command",
        "command": "python src/hooks/validate_genbank.py \"$file_path\"",
        "timeout": 10
      }]
    }, {
      "matcher": "Write|Edit",
      "hooks": [{
        "type": "command",
        "command": "python src/hooks/audit_log.py \"$tool_name\" \"$file_path\"",
        "timeout": 5
      }]
    }],
    "SubagentStop": [{
      "matcher": "assembly-council",
      "hooks": [{
        "type": "command",
        "command": "python src/hooks/validate_council_output.py",
        "timeout": 15
      }]
    }],
    "PreToolUse": [{
      "matcher": "Write",
      "hooks": [{
        "type": "command",
        "command": "python src/hooks/pre_write_validator.py \"$file_path\"",
        "timeout": 10
      }]
    }]
  }
}
